#!/usr/bin/env groovy

node {
    stage('build') {
        script {
            def disk_size = sh(script: "curl -X POST http://localhost:8081/api/v1/triggerworkflowsync -H 'Content-Type: application/json' -d '{"limit": 10,"jobidentifier": "AMCSJOB"}'", returnStdout: true).trim()
            println("disk_size = ${disk_size}")
        }
    }
}